# =================================================================
# Patient Registration System - Environment Configuration Template
# Copy this file to .env and configure for your environment
# =================================================================

# Flask Security (REQUIRED - Generate unique key for production)
SECRET_KEY=dev-secret-key-change-in-production-very-long-random-string

# Flask Environment Configuration
FLASK_ENV=production                    # development or production
FLASK_DEBUG=0                          # 0 for production, 1 for development

# Server Configuration
SERVER_HOST=127.0.0.1                  # 127.0.0.1 for local, 0.0.0.0 for LAN
SERVER_PORT=5000                       # Port to bind server
DESKTOP_MODE=false                     # true for auto-shutdown, false for LAN/multi-user

# Google Calendar Integration (REQUIRED FOR CALENDAR FEATURES)
GOOGLE_CALENDAR_ID=s4obpr7j3q70p7b4q5o8vsla9k@group.calendar.google.com
GOOGLE_CALENDAR_TZ=America/Fortaleza   # Timezone for calendar events
GOOGLE_CALENDAR_ICS_URL=               # Leave empty to auto-generate or provide custom ICS URL

# Calendar Caching Configuration
CALENDAR_CACHE_TTL_SECONDS=60          # Cache refresh interval in seconds (60 = 1 minute)
CALENDAR_CACHE_TTL_MINUTES=5           # Legacy setting (deprecated, use SECONDS)

# Google Forms Integration (OPTIONAL - for automated scheduling)
GOOGLE_FORMS_PUBLIC_ID=                # Public form ID from /d/e/<PUBLIC_ID>/viewform URL
GOOGLE_FORMS_VIEWFORM_URL=             # Complete viewform URL (optional if PUBLIC_ID provided)
GOOGLE_FORMS_TIMEOUT=10                # Timeout in seconds for form submissions

# Database Configuration (OPTIONAL - defaults to SQLite)
# SQLALCHEMY_DATABASE_URI=sqlite:///instance/prontuario.db
# SQLALCHEMY_ENGINE_OPTIONS={"pool_timeout": 20, "pool_recycle": -1}

# Lifecycle Management (Desktop Mode Only)
LIFECYCLE_TIMEOUT_SECONDS=30           # Auto-shutdown timeout when no activity
LIFECYCLE_HEARTBEAT_SECONDS=5          # Heartbeat check interval

# Development/Testing Settings (DO NOT USE IN PRODUCTION)
# AUTO_MIGRATE=false                   # Automatic schema migration on startup
# USE_WAITRESS=true                    # Force Waitress server instead of Flask dev server
